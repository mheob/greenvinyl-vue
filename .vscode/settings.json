{
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,

  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/vendor/**": true
  },

  // Extensions
  // ----------

  // Better comments
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00"
    },
    {
      "tag": "?",
      "color": "#3498DB"
    },
    {
      "tag": "I:",
      "color": "#15A2B8"
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true
    },
    {
      "tag": "fixme",
      "color": "#FF8C00"
    },
    {
      "tag": "todo",
      "color": "#FF8C00"
    }
  ],

  // Stylelint
  "css.validate": false,

  // Tailwind CSS IntelliSense
  "tailwindCSS.emmetCompletions": true,

  // Twig Language
  "[html]": {
    "editor.formatOnPaste": false
  }
}
