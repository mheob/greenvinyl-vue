{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./client/*"],
      "@/*": ["./client/*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    },
    "typeRoots": ["./node_modules/@types/", "./@types"]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
